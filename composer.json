{
  "name": "semhoun/claire-chatbot",
  "description": "Simple AI Agent Chat in PHP.",
  "license": "MIT",
  "type": "project",
  "keywords": [
    "slim-framework",
    "agentic",
    "doctrine",
    "neuron-ai"
  ],
  "authors": [
    {
      "name": "Nathanael Semhoun",
      "email": "nathanael@semhoun.net",
      "homepage": "https://www.semhoun.net"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-sqlite3": "*",
    "ext-json": "*",
    "slim/slim": "^4.15",
    "slim/psr7": "^1.7",
    "doctrine/orm": "^3.5",
    "doctrine/dbal": "^4.3",
    "doctrine/migrations": "^3.9",
    "symfony/cache": "^7.3",
    "php-di/slim-bridge": "^3.4",
    "monolog/monolog": "^3.9",
    "symfony/console": "^6.4",
    "slim/twig-view": "^3.4",
    "akrabat/proxy-detection-middleware": "^1.1",
    "openai-php/client": "^0.10",
    "symfony/http-client": "^7.3",
    "guzzlehttp/guzzle": "^7.10",
    "neuron-core/neuron-ai": "^3",
    "inspector-apm/inspector-php": "^3.16",
    "open-telemetry/sdk": "^1.9",
    "open-telemetry/exporter-otlp": "^1.3",
    "open-telemetry/opentelemetry-auto-slim": "^1.3",
    "open-telemetry/opentelemetry-auto-psr18": "^1.1",
    "open-telemetry/opentelemetry-auto-session": "^0.1.0",
    "open-telemetry/opentelemetry-auto-doctrine": "^0.3.1",
    "open-telemetry/opentelemetry-auto-io": "^0.1.0",
    "open-telemetry/opentelemetry-auto-curl": "^0.1.0",
    "open-telemetry/opentelemetry-auto-guzzle": "^1.2",
    "twig/markdown-extra": "^3.22",
    "league/commonmark": "^2.7",
    "odan/session": "^6.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "nunomaduro/phpinsights": "^2.13",
    "rector/rector": "^1.2",
    "semhoun/slim-tracy": "^1.0"
  },
  "scripts": {
    "start": "php -S localhost:8080 -t public public/index.php",
    "rector-check": "rector process --dry-run",
    "rector-fix": "rector process",
    "insights-check": "phpinsights --config-path=./phpinsights.php",
    "insights-fix": "phpinsights --config-path=./phpinsights.php -- fix"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true,
      "tbachert/spi": true
    }
  }
}
